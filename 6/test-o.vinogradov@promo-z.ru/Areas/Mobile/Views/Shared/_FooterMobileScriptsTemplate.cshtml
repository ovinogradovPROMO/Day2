"~/templates/" + SettingsDesign.Template + "/Areas/Mobile/styles/views/catalog.css",
"~/templates/" + SettingsDesign.Template + "/Areas/Mobile/styles/general.css"

}, bundleNameMobileCss);


    Html.AddBundles(new List<string>
    {



    }, "mobile.js");
}
